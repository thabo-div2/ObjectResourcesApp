<Window x:Class="ObjectResourcesApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ObjectResourcesApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel Orientation="Horizontal">
        <Button Background="{DynamicResource myBrush}" x:Name="Ok" Click="Ok_OnClick" FontSize="30" Content="OK" Margin="5" Height="200" Width="200"></Button>
        <Button Background="{DynamicResource myBrush}" x:Name="Cancel" Click="Cancel_OnClick" FontSize="30" Content="Cancel" Margin="5" Height="200" Width="200"></Button>
    </StackPanel>
</Window>
